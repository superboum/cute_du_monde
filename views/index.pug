doctype html
html
  head
    meta(charset="utf-8")
    link(rel="stylesheet",href="https://unpkg.com/purecss@1.0.1/build/base-min.css")
    link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/grids-min.css")
    link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/grids-responsive-min.css")
    link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/forms-min.css")
    link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/buttons-min.css")
    title La cute du monde des animaux
    style.
      form.pure-form input {
        margin: 5px;
      }
      .battle img {
        max-width: 100%;
        max-height: 500px;
        margin: auto;
        display: block;
      }
      .battle {
        text-align: center;
      }
  body(style="margin:10px")
    .pure-g
      .pure-u-1
        h1 La cute du monde des animaux
        div Édition Quentinsphère
    .pure-g
      .pure-u-md-2-3
        h3 Cliquez sur l'animal le plus mignon
        .pure-g.battle
          .pure-u-1.pure-u-md-1-2
            a(href="/vote/win/"+choix[0].name+"/loose/"+choix[1].name)
              div= choix[0].name
              img(src=choix[0].pic.replace("public", ""))
          .pure-u-1.pure-u-md-1-2
            a(href="/vote/win/"+choix[1].name+"/loose/"+choix[0].name)
              div= choix[1].name
              img(src=choix[1].pic.replace("public", ""))
      .pure-u-md-1-3
        form.pure-form(method="POST", action="/add", enctype="multipart/form-data")
          fieldset
            legend Ajoutez la photo de votre petit animal mignon
            input(type="text", placeholder="Petit nom mignon", name="nom")
            input(type="file", name="photo")
            input(type="submit", value="Envoi mignon").pure-button.pure-button-primary
        


